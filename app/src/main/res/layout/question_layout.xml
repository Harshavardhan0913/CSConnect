<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layoutUser"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="30px"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutQuestion" />

        <TextView
            android:id="@+id/layoutQuestion"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:padding="40px"
            android:paddingStart="20px"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:paddingStart="20px"
            android:text="Answers:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutQuestion" />

        <TextView
            android:id="@+id/layoutAnswersCount"
            android:layout_width="83dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/layoutQuestion" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:text="Asked By:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/layoutUser"
            app:layout_constraintTop_toBottomOf="@+id/layoutQuestion" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>